[
{{- $pages := .Site.RegularPages -}}
{{- $first := true -}}
{{- range $p := $pages -}}
  {{- if $first -}}{{- $first = false -}}{{- else -}},{{- end -}}
  {
    "title": {{ $p.Title | jsonify }},
    "summary": {{ (cond (isset $p.Params "summary") $p.Params.summary $p.Summary) | plainify | htmlUnescape | jsonify }},
    "url": {{ $p.RelPermalink | jsonify }},
    "date": "{{ $p.Date.Format "yyyy-MM-dd" }}",
    "category": {{ ($p.Params.category | default "story") | jsonify }},
    "tags": {{ ( $p.Params.tags | default (slice) ) | jsonify }}
  }
{{- end -}}
]

